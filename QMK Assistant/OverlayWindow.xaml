<Window x:Class="QMK_Assistant.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QMK_Assistant"
        mc:Ignorable="d"
        Title="OverlayWindow" Height="Auto" Width="Auto" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" Background="Transparent" Opacity="0.5" AllowsTransparency="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" x:Name="IndicatorRow"/>
            <RowDefinition Height="Auto" x:Name="KeyboardRow"/>
        </Grid.RowDefinitions>
        <Viewbox x:Name="IndicatorViewbox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0">
            <Canvas x:Name="IndicatorCanvas" HorizontalAlignment="Stretch" Background="Transparent"/>
        </Viewbox>
        <Viewbox x:Name="LayoutViewbox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1">
            <Canvas x:Name="LayoutCanvas" HorizontalAlignment="Stretch" Background="Transparent"/>
        </Viewbox>
    </Grid>
</Window>
